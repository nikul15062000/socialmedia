<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:id="@+id/exitanimation"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/splash_logo"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muliregular"
                android:text="Please Open your Internet connection"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/exit"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Exit"
                    android:textSize="18dp"
                    app:mcv_backgroundColor="@color/white"
                    app:mcv_cornerRadius="5dp"
                    app:mcv_strokeColor="@color/blue"
                    app:mcv_strokeSize="2dp"
                    app:mcv_textColor="@color/black"></com.robertlevonyan.views.chip.Chip>

                <com.robertlevonyan.views.chip.Chip
                    android:id="@+id/cancel1"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Retry"
                    android:textSize="18dp"
                    app:mcv_backgroundColor="@color/blue"
                    app:mcv_cornerRadius="5dp"
                    app:mcv_textColor="#ffffff"></com.robertlevonyan.views.chip.Chip>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>