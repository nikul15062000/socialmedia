<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/splash_logo"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.robertlevonyan.views.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="cancel"
                    app:mcv_cornerRadius="5dp"
                    android:id="@+id/cancel"
                    android:textSize="18dp"
                    app:mcv_strokeSize="1dp"
                    app:mcv_backgroundColor="@color/white"
                    app:mcv_strokeColor="#304ffe"
                    app:mcv_textColor="#304FFE"></com.robertlevonyan.views.chip.Chip>

                <com.robertlevonyan.views.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Done"
                    app:mcv_cornerRadius="5dp"
                    android:id="@+id/done"
                    app:mcv_strokeSize="1dp"
                    app:mcv_strokeColor="@color/gray"
                    app:mcv_selectedBackgroundColor="@color/green"
                    android:textSize="18dp"
                    app:mcv_backgroundColor="#304FFE"
                    app:mcv_textColor="#ffffff"></com.robertlevonyan.views.chip.Chip>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>